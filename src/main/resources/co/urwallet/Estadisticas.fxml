<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.urwallet.viewController.EstadistecasViewsControllers"
            prefHeight="400.0" prefWidth="600.0">
    <!-- Título -->
    <Label layoutX="220.0" layoutY="14.0" prefHeight="22.0" prefWidth="369.0" text="Estadísticas de Transacciones" textFill="#776fd1">
        <font>
            <Font name="Candara Bold" size="18.0" />
        </font>
    </Label>

    <!-- ComboBox para seleccionar estadísticas -->
    <ComboBox fx:id="cmbEstadistica" layoutX="150.0" layoutY="50.0" prefHeight="25.0" prefWidth="300.0" style="-fx-background-color: #187173;">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Gastos mas comunes" />
                <String fx:value="Usuarios con más transacciones" />
                <String fx:value="Saldo promedio de usuarios" />
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Botón para buscar -->
    <Button fx:id="btnBuscar" layoutX="470.0" layoutY="50.0" mnemonicParsing="false" onAction="#buscarAction" prefHeight="27.0" prefWidth="88.0"
            style="-fx-background-color: #00093c;" text="Buscar" textFill="WHITE">
        <font>
            <Font name="Candara" size="14.0" />
        </font>
    </Button>

    <!-- BarChart para mostrar las estadísticas -->
    <BarChart fx:id="barChart" layoutX="50.0" layoutY="100.0" prefHeight="280.0" prefWidth="500.0">
        <xAxis>
            <CategoryAxis label="Categoría / Usuario" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Valor" />
        </yAxis>
    </BarChart>
</AnchorPane>
